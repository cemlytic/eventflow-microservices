# ─────────────────────────
# Core
# ─────────────────────────
PORT=4001
APP_NAME=event-management-service
NODE_ENV=development
LOG_LEVEL=info

# Comma-separated list or single origin. Use "*" only in dev.
CORS_ORIGIN=http://localhost:3000

# ─────────────────────────
# Database (MongoDB Atlas or local)
# ─────────────────────────
# Example (Atlas):
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<database>?retryWrites=true&w=majority
# Example (local Docker):
# MONGODB_URI=mongodb://mongo:27017/event-management

# ─────────────────────────
# Redis
# ─────────────────────────
# If using Docker Compose and your service is named "redis":
REDIS_URL=redis://redis:6379/0
# If running locally on host:
# REDIS_URL=redis://localhost:6379/0

# ─────────────────────────
# Auth / JWT
# ─────────────────────────
JWT_SECRET=super_secret_key
JWT_EXPIRES_IN=7d

# ─────────────────────────
# Rate Limits
# NOTE: Use plain integers (ms). Do NOT write 60_000 with underscore.
# ─────────────────────────
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX=10

EVENT_RATE_LIMIT_WINDOW_MS=60000
EVENT_RATE_LIMIT_MAX=30
